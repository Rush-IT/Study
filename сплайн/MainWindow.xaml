<Window x:Class="сплайн.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:сплайн"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Canvas x:Name="paint" HorizontalAlignment="Left" Height="373" VerticalAlignment="Top" Width="792" MouseMove="Canvas_MouseMove" MouseDown="Canvas_MouseDown" Background="{DynamicResource {x:Static SystemColors.WindowBrushKey}}"/>
        <CheckBox x:Name="check" Content="Убрать прямые линии" HorizontalAlignment="Left" Margin="10,378,0,0" VerticalAlignment="Top" Height="41" Width="140" Checked="CheckBox_Checked" Click="check_Click"/>

    </Grid>
</Window>
